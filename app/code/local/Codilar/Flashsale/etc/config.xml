<?xml version="1.0"?>
<config>
  <modules>
    <Codilar_Flashsale>
      <version>0.1.0</version>
    </Codilar_Flashsale>
  </modules>
  <frontend>
    <routers>
      <flashsale>
        <use>standard</use>
          <args>
            <module>Codilar_Flashsale</module>
            <frontName>flashsale</frontName>
          </args>
      </flashsale>
    </routers>
		<layout>
		  <updates>
			<flashsale>
			  <file>flashsale.xml</file>
			</flashsale>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <flashsale>
        <class>Codilar_Flashsale_Helper</class>
      </flashsale>
    </helpers>
	<blocks>
	  <flashsale>
		<class>Codilar_Flashsale_Block</class>
	  </flashsale>
	</blocks>
	  <models>
		<flashsale>
			<class>Codilar_Flashsale_Model</class>
		</flashsale>
	  </models>


	<resources>
	  <flashsale_setup>
		<setup>
		  <module>Codilar_Flashsale</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </flashsale_setup>
	  <flashsale_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </flashsale_write>
	  <flashsale_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </flashsale_read>
	</resources>



		<events>
		   <checkout_cart_add_product_complete>
			<observers>
			   	<flashsale_observer>
			       <type>singleton</type>
			       <class>flashsale/observer</class>
			       <method>onAddToCartComplete</method>
		        </flashsale_observer>
		       </observers>
		  </checkout_cart_add_product_complete>
		  <checkout_cart_update_items_before>
			<observers>
			   	<flashsale_observer>
			       <type>singleton</type>
			       <class>flashsale/observer</class>
			       <method>onAddToCart</method>
		        </flashsale_observer>
		       </observers>
		  </checkout_cart_update_items_before>
		</events>
		
  </global>
    <adminhtml>
        <events>
            <admin_system_config_changed_section_flashsale>
                <observers>
                    <flashsale>
                        <type>singleton</type>
                        <class>flashsale/observer</class>
                        <method>onStatusChange</method>
                    </flashsale>

                </observers>
            </admin_system_config_changed_section_flashsale>
        </events>
    </adminhtml>
    <default>
        <flashsale>
            <general>
                <socket_url>server.php</socket_url>
            </general>
        </flashsale>
    </default>
</config> 